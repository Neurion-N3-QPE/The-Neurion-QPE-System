# N³ QPE Environment Configuration
# Copy this file to .env and customize for your environment

# Application Settings
APP_NAME="N³ Quantitative Prediction Engine"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true

# API Configuration
API_HOST="127.0.0.1"
API_PORT=8000
API_PREFIX="/api/v1"

# Security Settings (CHANGE IN PRODUCTION!)
SECRET_KEY="n3-qpe-change-this-secret-key-in-production"
JWT_ALGORITHM="HS256"
JWT_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/qpe_db"
REDIS_URL="redis://localhost:6379"

# Performance Settings
MAX_REQUESTS_PER_MINUTE=1000
CACHE_TTL_SECONDS=300

# Data Ingestion Settings
DATA_FEED_TIMEOUT=30
MAX_CONCURRENT_FEEDS=10
DATA_RETENTION_DAYS=365

# Model Settings
MODEL_UPDATE_INTERVAL_MINUTES=60
MONTE_CARLO_ITERATIONS=10000
CONFIDENCE_THRESHOLD=0.95

# Monitoring & Telemetry
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
LOG_LEVEL="INFO"

# N³ Ledger Integration
LEDGER_ENABLED=false
IPFS_NODE_URL="http://localhost:5001"

# UI Styling (Sovereign Aesthetic)
UI_THEME_NAVY="#0A1429"
UI_THEME_GOLD="#D4AF37"
UI_THEME_CREAM="#F8F5EC"
# N3 QPE System v2.0 - Environment Configuration
# Copy this file to .env and fill in your credentials

# === SYSTEM ===
QPE_ENVIRONMENT=production
QPE_DEBUG=false
LOG_LEVEL=INFO

# === API SERVER ===
API_HOST=0.0.0.0
API_PORT=8000

# === IG MARKETS (PRIMARY - LIVE TRADING) ===
# Get your API key from: https://labs.ig.com/
IG_API_KEY=your_ig_api_key_here
IG_USERNAME=your_ig_username
IG_PASSWORD=your_ig_password
IG_ACCOUNT_ID=your_account_id  # e.g., HTRFU
IG_DEMO_MODE=false  # Set to 'true' for demo, 'false' for LIVE

# === IC MARKETS (SECONDARY - MT5) ===
IC_LOGIN=your_mt5_login
IC_PASSWORD=your_mt5_password
IC_SERVER=your_mt5_server  # e.g., ICMarketsSC-Demo

# === TRADING PROFILE ===
# Options: aggressive | moderate | conservative
# Aggressive = 99.8% win rate target, 10% daily ROI
TRADING_PROFILE=aggressive

# === DATABASE ===
DATABASE_URL=sqlite:///data/n3qpe.db
REDIS_URL=redis://localhost:6379/0

# === SECURITY ===
SECRET_KEY=change_this_to_a_long_random_string_in_production

# === OPTIONAL FEATURES ===
ECONOMIC_CALENDAR_ENABLED=true
NEWS_SENTIMENT_ENABLED=true
PROMETHEUS_ENABLED=true

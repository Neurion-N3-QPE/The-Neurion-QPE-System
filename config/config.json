{
  "system": {
    "name": "Neurion QPE Trading System",
    "version": "3.0.0",
    "mode": "LIVE",
    "profile": "uncapped_pure_edge"
  },
  
  "brokers": {
    "ig_markets": {
      "name": "ig_markets",
      "environment": "live",
      "account_id": "HTRFU",
      "base_currency": "GBP",
      "api_key": "YOUR_API_KEY",
      "username": "YOUR_USERNAME",
      "password": "YOUR_PASSWORD",
      "demo": false,
      "default_epic": "IX.D.SPTRD.DAILY.IP",
      "instruments": {
        "GBP/USD": "CS.D.GBPUSD.TODAY.IP",
        "EUR/USD": "CS.D.EURUSD.TODAY.IP",
        "USD/JPY": "CS.D.USDJPY.TODAY.IP",
        "GBP/JPY": "CS.D.GBPJPY.TODAY.IP",
        "EUR/GBP": "CS.D.EURGBP.TODAY.IP",
        "FTSE 100": "IX.D.FTSE.DAILY.IP",
        "DAX 40": "IX.D.DAX.DAILY.IP",
        "NASDAQ 100": "IX.D.NASDAQ.DAILY.IP",
        "S&P 500": "IX.D.SPTRD.DAILY.IP",
        "Dow Jones": "IX.D.DOW.DAILY.IP",
        "Gold": "CS.D.USCGC.TODAY.IP",
        "Silver": "CS.D.USCSI.TODAY.IP",
        "Crude Oil": "CC.D.CL.DAILY.IP",
        "Brent Oil": "CC.D.LCO.DAILY.IP",
        "Bitcoin": "CS.D.BITCOIN.TODAY.IP"
      }
    }
  },
  
  "risk": {
    "base_risk_per_trade": 0.03,
    "confidence_threshold": 0.75,
    "max_positions": 999,
    "max_daily_loss": null,
    "max_daily_trades": null,
    "comment": "UNCAPPED - pure edge exploitation"
  },
  
  "trading": {
    "start_time": "00:00",
    "end_time": "23:59",
    "timezone": "GMT",
    "compound_profits": true,
    "recalculate_every_trade": true,
    "fragmentation": {
      "enabled": true,
      "num_fragments": 5,
      "margin_safety_threshold": 35.0,
      "stagger_delay": 1.5,
      "min_fragment_size": 0.1
    },
    "intra_trade_compounding": {
      "enabled": true,
      "profit_threshold_percent": 1.0,
      "profit_utilization_percent": 25.0,
      "compound_cooldown_minutes": 5,
      "max_compound_percent_of_balance": 2.0
    },
    "risk_management": {
      "enabled": true,
      "risk_per_trade_percent": 3.0,
      "adaptive_stops": {
        "enabled": true,
        "tier1_profit_r": 0.5,
        "breakeven_buffer_r": 0.1,
        "tier2_profit_r": 1.0,
        "tier2_protection_r": 0.5,
        "tier3_profit_r": 2.0,
        "tier3_protection_r": 1.0,
        "tier4_profit_r": 3.0,
        "trailing_percentage": 0.5,
        "stop_update_cooldown_minutes": 2
      }
    },
    "micro_scalping": {
      "enabled": true,
      "scalp_size": 0.05,
      "take_profit_points": 3,
      "stop_loss_points": 2,
      "max_scalps_per_signal": 3,
      "scalp_interval_seconds": 0.5,
      "min_confidence": 0.85,
      "min_volatility": 1.2,
      "max_margin_threshold": 50.0,
      "epic_cooldown_minutes": 2
    },
    "confidence_weighted_density": {
      "enabled": true,
      "ultra_high_threshold": 0.9,
      "ultra_high_density": 3,
      "high_threshold": 0.8,
      "high_density": 2,
      "medium_threshold": 0.75,
      "medium_density": 1,
      "base_multiplier": 0.3,
      "increment_multiplier": 0.2,
      "confidence_bonus_factor": 2.0,
      "fragments_per_density_trade": 2,
      "density_trade_delay": 2.0
    },
    "rolling_balance_scaling": {
      "enabled": true,
      "update_frequency": "after_each_trade",
      "env_file_path": ".env",
      "balance_var_name": "ACCOUNT_BALANCE",
      "auto_recalculate_sizing": true,
      "balance_sync_interval_minutes": 5,
      "track_trade_history": true,
      "max_history_records": 100
    },
    "volatility_adaptive_profit": {
      "enabled": true,
      "base_atr_multiplier": 1.5,
      "confidence_multiplier_range": {
        "min": 0.75,
        "max": 1.25
      },
      "volatility_factor_cap": 2.0,
      "minimum_take_profit_points": 5.0,
      "price_history_length": 50,
      "volatility_calculation_period": 10,
      "historical_volatility_period": 20,
      "volatility_smoothing_factor": 0.2,
      "default_atr_estimate": 15.0,
      "default_avg_volatility": 12.0
    },
    "session_bound_exposure": {
      "enabled": true,
      "respect_session_boundaries": true,
      "session_overlap_priority": true,
      "off_hours_trading": {
        "enabled": true,
        "reduced_position_size": 0.5,
        "max_positions": 1
      },
      "session_transitions": {
        "grace_period_minutes": 15,
        "auto_close_off_session_positions": false
      },
      "volatility_adjustments": {
        "apply_session_multipliers": true,
        "overlap_boost": 1.5,
        "off_hours_reduction": 0.8
      }
    },
    "ml_confidence_tuner": {
      "enabled": true,
      "min_training_samples": 100,
      "retrain_frequency_days": 7,
      "ml_weight": 0.3,
      "base_weight": 0.7,
      "max_confidence": 0.95,
      "min_confidence": 0.1,
      "feature_engineering": {
        "use_technical_indicators": true,
        "use_session_data": true,
        "use_market_context": true,
        "use_time_features": true
      },
      "model_parameters": {
        "n_estimators": 100,
        "max_depth": 10,
        "min_samples_split": 5,
        "min_samples_leaf": 2,
        "random_state": 42
      },
      "performance_tracking": {
        "track_feature_importance": true,
        "log_predictions": true,
        "save_model_metrics": true
      }
    },
    "sse": {
      "enabled": true,
      "n_simulations": 10000,
      "pre_trade_validation": true,
      "monte_carlo_gates": {
        "enabled": true,
        "min_win_probability": 0.65,
        "max_risk_of_ruin": 0.05,
        "min_expected_value": 0.1,
        "confidence_threshold": 0.95
      },
      "simulation_parameters": {
        "volatility_clustering": true,
        "regime_detection": true,
        "shock_modeling": true,
        "correlation_modeling": false
      },
      "performance_optimization": {
        "parallel_processing": true,
        "cache_scenarios": true,
        "adaptive_simulation_count": false
      },
      "risk_firewall": {
        "enabled": true,
        "block_high_risk_trades": true,
        "require_unanimous_agent_approval": false,
        "emergency_stop_loss_multiplier": 2.0
      }
    }
  },
  
  "logging": {
    "level": "INFO",
    "log_trades": true,
    "log_performance": true,
    "log_file": "logs/neurion_qpe.log"
  }
}
